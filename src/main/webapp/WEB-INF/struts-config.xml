<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="loginForm" type="com.matevosian.forms.LoginForm" />
    </form-beans>
    
    <action-mappings>
        <action path="/login"
                type="com.matevosian.actions.LoginAction"
                name="loginForm"
                validate="true"
                input="/WEB-INF/view/index.jsp"
                scope="request"
        >
            <forward name="index" path="/WEB-INF/view/index.jsp"/>
            <forward name="view" path="/WEB-INF/view/view.jsp"/>
        </action>
    </action-mappings>

    <message-resources
            parameter="ApplicationResource" />
</struts-config>